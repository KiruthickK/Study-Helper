                <textarea id="notes_content" name="notes_content" rows="8" cols="50"></textarea>
                <button onclick="addNotes()">Add</button>
            </span>
        </div>
        <% notes.forEach(note=> { %>
            <div id="note_<%= note.note_id %>" class="row rounded bg-secondary" onclick="loadNote(this)">
                <strong>Notes ID:</strong>
                <%= note.Notes_id %>,
                    <strong>Topic:</strong>
                    <%= note.topic %>
                        <strong>Notes:</strong>
                        <%= note.notes %>
            </div>
            <% }); %>

