<%- include('Header'); -%>
    <a class="nav-link active" aria-current="page" href="/logout">Log out</a>
    </div>
    </div>
    </div>
    </nav>
    <div class="container bg-custom-back-div p-3 rounded mb-5" id="mainDiv">
        <h1>Hi <%= userName %>
        </h1>
        <h1>List of chapters</h1>
        <br>
        <div class="row">
            <button onclick="showForm()" class="btn btn-secondary">Add a new Chapter</button>
            <span class="d-none" id="chapter_input_form">
                Enter the Chapter name <br>
                <input type="text" name="new_chapter_name" id="new_chapter_name" class="form-control mb-2">
                <button onclick="addChapter()" class="btn btn-dark">Add</button>
                <button onclick="addCourseCancel()" class="btn btn-danger">Cancel</button>
            </span>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit Chapter Name</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="text" name="editChapterNameInput" id="editChapterNameInput">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                            onclick="saveEditedChanges()">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
        <% chapters.forEach(chapter=> { %>
            <div id="chapter_<%= chapter.chapter_id %>" class="m-5 rounded bg-light p-3 position-relative"
                onclick="loadChapter(this)">
                <button class="btn btn-info position-relative  m-1" data-bs-toggle="modal"
                    data-bs-target="#exampleModal"
                    onclick="editChapter(event, `<%= chapter.chapter_id %>`)">Edit</button>
                <button onclick="deleteChapter(event, `<%= chapter.chapter_id %>`)"
                    class="btn btn-danger position-absolute top-0 end-0 m-1">Delete</button>
                <strong>Chapter Name:</strong>
                <span id="cname_<%=chapter.chapter_id %>">
                    <%= chapter.chapter_name %>
                </span>
            </div>
            <% }); %>

    </div>
    <script src="/scripts/chapterPage.js"></script>
    </body>

    </html>